<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mobile_navigation"
    app:startDestination="@id/navigation_dashboard">



    <fragment
        android:id="@+id/navigation_dashboard"
        android:name="com.example.myapplication.ui.dashboard.DashboardFragment"
        android:label="@string/title_dashboard"
        tools:layout="@layout/fragment_dashboard" >
        <action
            android:id="@+id/action_navigation_dashboard_to_navigation_notifications"
            app:destination="@id/navigation_notifications" />
        <action
            android:id="@+id/action_navigation_dashboard_to_bmi"
            app:destination="@id/bmi" />
        <action
            android:id="@+id/action_navigation_dashboard_to_sip"
            app:destination="@id/sip" />
        <action
            android:id="@+id/action_navigation_dashboard_to_retirement"
            app:destination="@id/retirement" />
    </fragment>

    <fragment
        android:id="@+id/navigation_notifications"
        android:name="com.example.myapplication.ui.emi.EmiFragment"
        android:label="@string/title_notifications"
        tools:layout="@layout/fragment_emi" />
    <fragment
        android:id="@+id/bmi"
        android:name="com.example.myapplication.ui.bmi.Bmi"
        android:label="fragment_bmi"
        tools:layout="@layout/fragment_bmi" />
    <fragment
        android:id="@+id/sip"
        android:name="com.example.myapplication.ui.compounding.Compounding"
        android:label="fragment_sip"
        tools:layout="@layout/fragment_sip" />
    <fragment
        android:id="@+id/retirement"
        android:name="com.example.myapplication.ui.retirement.retirement"
        android:label="fragment_retirement"
        tools:layout="@layout/fragment_retirement" />
</navigation>