<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"

    android:id="@+id/materialCardView"
    style="@style/MyCardView"
    android:layout_width="170dp"
    android:layout_height="140dp"
    android:layout_margin="7dp"
    app:cardElevation="6dp"
    app:cardPreventCornerOverlap="false"


    >
<androidx.constraintlayout.widget.ConstraintLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <ImageView
        android:id="@+id/favourite"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:layout_marginTop="50dp"
        android:background="@drawable/ic_baseline_favorite_border_24"
        android:scaleType="centerInside"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent">

    </ImageView>
    <TextView
        android:id="@+id/appusagestext"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="6dp"
        android:layout_marginBottom="2dp"
        android:text="@string/bmi"
        android:textSize="16dp"
        android:textStyle="bold"
        android:textColor="#000000"
        app:layout_constraintLeft_toLeftOf="@id/favourite"

        app:layout_constraintTop_toTopOf="@id/home_icon"
/>
    <TextView
        android:id="@+id/appusagesmessages"
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="6dp"
        android:layout_marginBottom="2dp"
        android:text="@string/bmimessage"
        android:textSize="10dp"
        android:textColor="#000000"
        app:layout_constraintLeft_toLeftOf="@id/favourite"
        app:layout_constraintTop_toBottomOf="@id/appusagestext"
        />

    <ImageView
        android:id="@+id/home_icon"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_margin="5dp"
        android:layout_marginTop="16dp"
        android:background="@drawable/ic_baseline_monitor_heart_24"
        android:scaleType="centerInside"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent">

    </ImageView>

</androidx.constraintlayout.widget.ConstraintLayout>

</com.google.android.material.card.MaterialCardView>